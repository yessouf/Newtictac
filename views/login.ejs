<div class="home">

    <div class="centre">

      <div class="col-6 text-center get_started">
      </div>

      <!-- SIGN IN AREA -->
      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">

          <h4 class="light">Sign In</h4>

          <form action="/users/login" method="POST">
            <div class="form-group">
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-danger">Submit</button>
          </form>

        </div>

      </div>

      <div class="col-12 col-sm-6 text-center">

        <div class="formArea">
          <h4 class="light">Sign Up</h4>

          <form action="/users/inscription" method="POST">
            <div class="form-group">
              <input name="nameFromFront" type="text" class="form-control" placeholder="Enter name">
            </div>
            <div class="form-group">
                <input name="firstnameFromFront" type="text" class="form-control" placeholder="Enter FirstName">
              </div>
            <div class="form-group">
              <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            </div>
            <div class="form-group">
              <input name="passwordFromFront" type="password" class="form-control"  placeholder="Enter password">
            </div>

            <button type="submit" class="btn btn-danger">Submit</button>
          </form>
        </div>

      </div>
    </div>
  </div>
